{
  "name": "yeelight-electron-client",
  "version": "1.0.0",
  "description": "A Yeelight client built with Electron and Vue 3",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "start": "npm run build && npm run electron:dev",
    "lint": "eslint . --ext .js,.vue",
    "format": "prettier --write .",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "yeelight",
    "electron",
    "vue",
    "smart-home"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "electron": "^39.2.6",
    "electron-builder": "^25.1.7",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.3.0",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^6.0.1",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.1.8"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.13.2",
    "element-plus": "^2.12.0",
    "pinia": "^3.0.4",
    "sass": "^1.96.0",
    "vue": "^3.5.13",
    "vue-router": "^4.6.4"
  }
}
